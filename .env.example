# .env.example (Root directory)

# Application
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DB_NAME=cotrans_db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters

# Email Configuration (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@cotransglobal.com
ADMIN_EMAIL=admin@cotransglobal.com

# CORS Configuration
CORS_ORIGIN=https://cotransglobal.com
ALLOWED_ORIGINS=https://cotransglobal.com,https://www.cotransglobal.com

# Frontend API URL
VITE_API_URL=https://api.cotransglobal.com/api

# Optional: Cloudflare/CDN
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# Optional: Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=